<%- include('../../layouts/header'); %>

  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-8">
          <div class="card card-outline card-primary">
            <div class="card-header">
              <h4 class="card-title">
                <%= title; %>
              </h4>
            </div>
            <div class="card-body">
              <form method="POST" data-form="true" data-url="/admin/portal/shoecares/add">
                <% if(is_update==true){ %>
                  <input type="hidden" name="action_id" value="<%= action_data._id; %>">
                  <input type="hidden" name="orderid" value="<%= action_data.orderid; %>">
                  <% } %>

                    <!-- Name / Phone -->
                    <div class="row">
                      <div class="col-md-6">
                        <div class="form-group">
                          <label>Name</label>
                          <input type="text" class="form-control" name="name"
                            value="<%= is_update ? action_data.name : '' %>" required>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="form-group">
                          <label>Phone</label>
                          <input type="text" class="form-control" name="phone"
                            value="<%= is_update ? action_data.phone : '' %>" required>
                        </div>
                      </div>
                    </div>

                    <!-- Pickup -->
                    <div class="row">
                      <div class="col-md-6">
                        <div class="form-group">
                          <label>Pick Up Date</label>
                          <input type="date" class="form-control" name="pickupdate"
                            value="<%= is_update ? action_data.pickupdate : '' %>" required>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="form-group">
                          <label>Pick Up Time</label>
                          <select class="form-control" name="pickuptime" required>
                            <% if(is_update){ %>
                              <option value="<%= action_data.pickuptime %>">
                                <%= action_data.pickuptime %>
                              </option>
                              <% } else { %>
                                <option value="09:00 AM - 10:00 AM">09:00 AM - 10:00 AM</option>
                                <option value="10:00 AM - 11:00 AM">10:00 AM - 11:00 AM</option>
                                <option value="11:00 AM - 12:00 PM">11:00 AM - 12:00 PM</option>
                                <option value="12:00 PM - 1:00 PM">12:00 PM - 1:00 PM</option>
                                <option value="4:00 PM - 5:00 PM">4:00 PM - 5:00 PM</option>
                                <option value="5:00 PM - 6:00 PM">5:00 PM - 6:00 PM</option>
                                <option value="6:00 PM - 7:00 PM">6:00 PM - 7:00 PM</option>
                                <option value="7:00 PM - 8:00 PM">7:00 PM - 8:00 PM</option>
                                <% } %>
                          </select>
                        </div>
                      </div>
                    </div>

                    <!-- Address -->
                    <div class="form-group">
                      <label>Address</label>
                      <input type="text" class="form-control" name="address" placeholder="Address"
                        value="<%= is_update ? action_data.address : '' %>" required>
                    </div>

                    <!-- Description -->
                    <div class="form-group">
                      <label>Description</label>
                      <textarea class="form-control" name="description" placeholder="Description"
                        required><%= is_update ? action_data.description : '' %></textarea>
                    </div>

                    <!-- Shoe Services -->
                    <div class="form-group">
                      <label class="font-weight-bold">Shoe Services</label>
                      <div id="shoeServicesContainer" class="border p-3 rounded">
                        <% let servicesList=is_update && Array.isArray(action_data.services) ? action_data.services : [{
                          name: '' , price: '' , service: '' , note: '' }]; servicesList.forEach(function(service,
                          index){ %>
                          <div class="row shoe-service-item mb-3 p-3 border rounded">

                            <div class="col-md-6 mb-2">
                              <label>Shoe Name</label>
                              <input type="text" class="form-control service-name" value="<%= service.name %>"
                                placeholder="Enter Shoe Name" required>
                            </div>

                            <div class="col-md-6 mb-2">
                              <label>Price</label>
                              <input type="number" step="0.01" class="form-control price-input"
                                value="<%= service.price %>" placeholder="Enter Price" required>
                            </div>

                            <div class="col-md-6 mb-2">
                              <label>Service Type</label>
                              <select class="form-control service-type" required>
                                <option value="">-- Select Service --</option>
                                <option value="Shoe Polishing" <%=service.service==="Shoe Polishing" ? "selected" : ""
                                  %>>Shoe Polishing</option>
                                <option value="Shoe Cleaning" <%=service.service==="Shoe Cleaning" ? "selected" : "" %>
                                  >Shoe Cleaning</option>
                                <option value="Shoe Repairing" <%=service.service==="Shoe Repairing" ? "selected" : ""
                                  %>>Shoe Repairing</option>
                                <option value="Shoe Protection" <%=service.service==="Shoe Protection" ? "selected" : ""
                                  %>>Shoe Protection</option>
                              </select>
                            </div>

                            <div class="col-md-6 mb-2">
                              <label>Service Note</label>
                              <textarea class="form-control service-note"
                                placeholder="Write a short note..."><%= service.note || '' %></textarea>
                            </div>

                          </div>
                          <% }); %>
                      </div>

                      <button type="button" id="addServiceBtn" class="btn btn-success btn-sm mt-2">
                        + Add More
                      </button>
                    </div>

                    <!-- Hidden inputs -->
                    <input type="hidden" id="servicesInput" name="services" value='<%= JSON.stringify(servicesList) %>'>
                    <input type="hidden" id="payableamount" name="payableamount"
                      value="<%= action_data.payableamount || 0 %>">

                    <!-- Total -->
                    <div class="mt-2">
                      <strong>Total Payable:</strong> <span id="totalPrice">
                        <%= action_data.payableamount || 0 %>
                      </span>
                    </div>

                    <!-- Status -->
                    <div class="form-group mt-3">
                      <label>Status</label>
                      <select class="form-control" name="status" required>
                        <option value="confirm" <%=is_update && action_data.status==="confirm" ? 'selected' : '' %>
                          >Order Confirm</option>
                        <option value="cancel" <%=is_update && action_data.status==="cancel" ? 'selected' : '' %>>Order
                          Cancel</option>
                        <option value="Delivered" <%=is_update && action_data.status==="Delivered" ? 'selected' : '' %>
                          >Order Delivered</option>
                      </select>
                    </div>

                    <!-- Active -->
                    <div class="form-group mt-3">
                      <label>Is Active</label>
                      <select class="form-control" name="isActive" required>
                        <option value="true" <%=is_update && action_data.isActive===true ? 'selected' : '' %>>Yes
                        </option>
                        <option value="false" <%=is_update && action_data.isActive===false ? 'selected' : '' %>>No
                        </option>
                      </select>
                    </div>

                    <!-- Submit -->
                    <div class="form-group">
                      <button type="submit" class="btn btn-primary">
                        <%= title; %>
                      </button>
                    </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%- include('../../layouts/footer'); %>

    <!-- jQuery for Dynamic Services -->
    <script>
      $(document).ready(function () {

        // Add new row
        $("#addServiceBtn").on("click", function () {
          const newRow = `
      <div class="row shoe-service-item mb-3 p-3 border rounded">
        <div class="col-md-6 mb-2">
          <label>Shoe Name</label>
          <input type="text" class="form-control service-name" placeholder="Enter Shoe Name" required>
        </div>
        <div class="col-md-6 mb-2">
          <label>Price</label>
          <input type="number" step="0.01" class="form-control price-input" placeholder="Enter Price" required>
        </div>
        <div class="col-md-6 mb-2">
          <label>Service Type</label>
          <select class="form-control service-type" required>
            <option value="">-- Select Service --</option>
            <option value="Shoe Polishing">Shoe Polishing</option>
            <option value="Shoe Cleaning">Shoe Cleaning</option>
            <option value="Shoe Repairing">Shoe Repairing</option>
            <option value="Shoe Protection">Shoe Protection</option>
          </select>
        </div>
        <div class="col-md-6 mb-2">
          <label>Service Note</label>
          <textarea class="form-control service-note" placeholder="Write a short note..."></textarea>
        </div>
      </div>`;
          $("#shoeServicesContainer").append(newRow);
          updateServicesInput();
        });

        // Update hidden services array
        function updateServicesInput() {
          const services = [];
          $("#shoeServicesContainer .shoe-service-item").each(function () {
            const name = $(this).find(".service-name").val().trim();
            const price = $(this).find(".price-input").val().trim();
            const service = $(this).find(".service-type").val().trim();
            const note = $(this).find(".service-note").val().trim();
            services.push({
              name,
              price,
              service,
              note
            });
          });
          $("#servicesInput").val(JSON.stringify(services));
        }

        // Calculate total price
        function calculateTotal() {
          let total = 0;
          $(".price-input").each(function () {
            total += parseFloat($(this).val()) || 0;
          });
          $("#totalPrice").text(total.toFixed(2));
          $("#payableamount").val(total.toFixed(2));
        }

        // Listen for changes
        $(document).on("input change", ".shoe-service-item input, .shoe-service-item select, .shoe-service-item textarea", function () {
          calculateTotal();
          updateServicesInput();
        });

        // Init on page load
        calculateTotal();
        updateServicesInput();
      });
    </script>